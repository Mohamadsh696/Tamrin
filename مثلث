#include <stdio.h>

int main() {
  int x, y, z;

  printf("سه ضلع مثلث را وارد کنید: ");
  scanf("%d %d %d", &x, &y, &z);

  // بررسی امکان تشکیل مثلث
  if (x + y <= z || x + z <= y || y + z <= x) {
    printf("امکان تشکیل مثلث وجود ندارد.\n");
  } else {
    printf("امکان تشکیل مثلث وجود دارد.\n");
  }

  return 0;
}
