#include <stdio.h>

int main() {
    // تعریف متغیر برای ذخیره شکل کیک
    char cake[3][5];

    // تزئین کیک با قطعات میوه
    cake[0][0] = 'O'; cake[0][1] = 'o'; cake[0][2] = 'O'; cake[0][3] = 'o'; cake[0][4] = 'O';
    cake[1][0] = 'o'; cake[1][1] = 'O'; cake[1][2] = 'o'; cake[1][3] = 'O'; cake[1][4] = 'o';
    cake[2][0] = 'O'; cake[2][1] = 'o'; cake[2][2] = 'O'; cake[2][3] = 'o'; cake[2][4] = 'O';

    // چاپ شکل کیک
    for (int i = 0; i < 3; ++i) {
        for (int j = 0; j < 5; ++j) {
            printf("%c ", cake[i][j]);
        }
        printf("\n");
    }

    return 0;
}
